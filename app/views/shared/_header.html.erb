<header class='top-page-header'>
  <div class="header-inner">
    <div class="logo">
    <%= link_to image_tag("dodo-logo.png", class:"dodo-icon"), "/" %>
    </div>
    <nav class="header-nav">
      <div class="header-nav-item">
        <form class="form2">
          <input type="search" class="form2-input" placeholder="プランを検索" />
          <button type="submit" class="form2-button"><i class="fa fa-search"></i></button>
        </form>
      </div>
    </nav>
  </div>
    <div class='lists-right'>
      <% if user_signed_in? %>
      <div class="header-user-item">
        <img src="https://placehold.jp/50x50.png" class="header-avatar" />
      <p><%= link_to current_user.nickname,'#', class: "user-nickname" %></p>
      </div>      
      <p><%= link_to 'ログアウト', destroy_user_session_path,method: :delete, class: "logout" %></p>
      <% else %>
      <p><%= link_to 'ログイン', new_user_session_path, class: "login" %></p>
      <p><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></p>
      <% end %>
    </div>
  </div>
</header>
